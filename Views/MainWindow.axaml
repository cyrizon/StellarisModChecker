<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:StellarisModChecker.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="StellarisModChecker.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Stellaris Mod Checker">
    
    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>
    
    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="{Binding WelcomeMessage}" 
                   FontSize="20" 
                   HorizontalAlignment="Center"/>
        
        <TextBlock Text="{Binding CurrentVersion, StringFormat='Version: {0}'}"
                   HorizontalAlignment="Center"
                   FontSize="12"
                   Opacity="0.7"/>
        
        <Button Content="Load Mods" 
                Command="{Binding LoadModsCommand}"
                HorizontalAlignment="Center"/>
        
        <!-- Section de mise à jour -->
        <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,20,0,0">
            <StackPanel Spacing="10">
                <TextBlock Text="{Binding UpdateMessage}" HorizontalAlignment="Center"/>
                
                <Button Content="Vérifier les mises à jour"
                        Command="{Binding CheckForUpdatesCommand}"
                        HorizontalAlignment="Center"/>
                
                <Button Content="Installer la mise à jour"
                        Command="{Binding InstallUpdateCommand}"
                        HorizontalAlignment="Center"
                        IsVisible="{Binding UpdateAvailable}"/>
            </StackPanel>
        </Border>
    </StackPanel>
</Window>
